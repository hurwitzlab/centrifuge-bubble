{
    "name": "centrifuge-bubble",
    "version": "0.0.5",
    "shortDescription": "Create bubble plot from Centrifuge classification.",
    "longDescription": "Centrifuge provides fast classification of short reads. Use the .tsv output files to create a bubble chart showing relative species abundance across any number of samples.",
    "available": true,
    "checkpointable": false,
    "defaultMemoryPerNode": 32,
    "defaultProcessorsPerNode": 16,
    "defaultMaxRunTime": "12:00:00",
    "defaultNodeCount": 1,
    "defaultQueue": "normal",
    "deploymentPath": "kyclark/applications/centrifuge-bubble-0.0.5/stampede",
    "deploymentSystem": "data.iplantcollaborative.org",
    "executionSystem": "tacc-stampede2-kyclark",
    "executionType": "HPC",
    "helpURI": "",
    "label": "Centrifuge Bubble",
    "parallelism": "SERIAL",
    "templatePath": "template.sh",
    "testPath": "test.sh",
    "modules": [
        "load tacc-singularity"
    ],
    "tags": [],
    "ontology": [
        "http://sswapmeet.sswap.info/agave/apps/Application"
    ],
    "inputs": [
        {
            "id": "CENTRIFUGE_DIR",
            "value": {
                "default": "",
                "order": 0,
                "validator": "",
                "required": true,
                "visible": true,
                "enquote": false
            },
            "semantics": {
                "ontology": [
                    "http://sswapmeet.sswap.info/mime/application/X-bam"
                ],
                "minCardinality": 1,
                "maxCardinality": -1,
                "fileTypes": [
                    "raw-0"
                ]
            },
            "details": {
                "description": "",
                "label": "Centrifuge dir (TSV files)",
                "argument": "-d ",
                "repeatArgument": false,
                "showArgument": true
            }
        }
    ],
    "parameters": [
        {
            "id": "TITLE",
            "value": {
                "default": "Bubble Plot",
                "type": "string",
                "order": 1,
                "required": false,
                "visible": true,
                "enquote": true,
                "validator": ""
            },
            "details": {
                "description": "Title of the plot",
                "label": "Title",
                "argument": "-t ",
                "repeatArgument": false,
                "showArgument": true
            }
        },
        {
            "id": "EXCLUDE_SPECIES",
            "value": {
                "default": "",
                "type": "string",
                "order": 2,
                "required": false,
                "visible": true,
                "enquote": true,
                "validator": ""
            },
            "details": {
                "description": "Comma-separated list of species names to exclude",
                "label": "Exclude species",
                "argument": "-e ",
                "repeatArgument": false,
                "showArgument": true
            }
        },
        {
            "id": "MIN_PROPORTION",
            "value": {
                "default": "0.02",
                "type": "string",
                "order": 3,
                "required": false,
                "visible": true,
                "enquote": false,
                "validator": ""
            },
            "details": {
                "description": "Minimum proportion to be included",
                "label": "Min. proportion",
                "argument": "-p ",
                "repeatArgument": false,
                "showArgument": true
            }
        },
        {
            "id": "MAX_SPECIES",
            "value": {
                "default": "",
                "type": "string",
                "order": 4,
                "required": true,
                "visible": true,
                "enquote": false,
                "validator": ""
            },
            "details": {
                "description": "",
                "label": "Maximum num. species",
                "argument": "-m ",
                "repeatArgument": false,
                "showArgument": true
            }
        }
    ],
    "outputs": []
}
